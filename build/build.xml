	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="spring-core-5.3.9.jar"/>
				<include name="annotations-13.0.jar"/>
				<include name="javafx-fxml-18-ea+1-win.jar"/>
				<include name="javafx-controls-18-ea+1.jar"/>
				<include name="okio-2.8.0.jar"/>
				<include name="javafx-graphics-18-ea+1.jar"/>
				<include name="spring-data-commons-2.5.4.jar"/>
				<include name="javafx-graphics-18-ea+1-win.jar"/>
				<include name="kotlin-stdlib-common-1.4.0.jar"/>
				<include name="kotlin-stdlib-1.4.10.jar"/>
				<include name="javafx-controls-18-ea+1-win.jar"/>
				<include name="javafx-base-18-ea+1-win.jar"/>
				<include name="gson-2.8.8.jar"/>
				<include name="slf4j-api-1.7.26.jar"/>
				<include name="okhttp-4.9.0.jar"/>
				<include name="javafx-base-18-ea+1.jar"/>
				<include name="spring-jcl-5.3.9.jar"/>
				<include name="spring-beans-5.3.9.jar"/>
				<include name="javafx-fxml-18-ea+1.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="16" target="16" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="cadastramento-javafx-desktop.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="Cadastramento"
			mainClass="application.Main"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/cadastramento-javafx-desktop.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="desafio.fsbr"/>
				<attribute name="Implementation-Title" value="Cadastramento"/>
				<attribute name="Implementation-Version" value="0.0.1"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="cadastramento-javafx-desktop" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="cadastramento-javafx-desktop" vendor="desafio.fsbr"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
